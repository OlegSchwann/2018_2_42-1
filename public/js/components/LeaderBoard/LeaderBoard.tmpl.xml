    <div class="leaderboard" style="margin-bottom: 20rem;">
        <table style="border: 1px solid black;">
            <tr>
                <th>User</th>
                <th>Games played</th>
                <th>Games won</th>
            </tr>
            <fest:each iterate="data.leaders" index="i">
                <tr>
                    <td>
                        <fest:value>data.leaders[i].login</fest:value>
                        <img src="{data.leaders[i].avatarAddress}"></img>
                    </td>
                    <td>
                        <fest:value>data.leaders[i].gamesPlayed</fest:value> games played
                    </td>
                    <td>
                        <fest:value>data.leaders[i].wins</fest:value> games won
                    </td>
                </tr>
            </fest:each>
        </table>

        <div class="more_button">
            <a data-href="" href="">Show more</a>
        </div>

        <a href="/menu" data-href="menu" class="leaderboard__back">Back</a>
    </div>
</fest:template>